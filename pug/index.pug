			section.top#top
				.container
					.top__inner
						.top__cartrack.top__cartrack--1
							img.top__model(src="img/boxster_logo.svg", alt="")
							img.top__car(src="img/car-1.png", alt="")
						h1.top__title new challenge
							strong posh’n’porsche
						.top__cartrack.top__cartrack--2
							img.top__car(src="img/car-2.png", alt="")
							img.top__model(src="img/carrera_logo.svg", alt="")
						.top__date.date
							span.date__from Start 01.02.20
							span.date__sep
							span.date__to Finish 01.09.20

			button.scroll(data-href="cars")

			section.cars#cars
				.container
					.cars__inner
						button.cars__prev
						button.cars__next
						h2.cars__title Win your #[br]own porsche
						.cars__models
							img(src="img/carrera_logo.svg", alt="").active
							img(src="img/boxster_logo.svg", alt="")
						p.cars__description Drive traffic to #[strong all offers] and #[strong all GEOs] and earn #[strong Porsсhe Points]. Porsсhe Points are gained per every #[strong $10 000] that are made and available for payout within account.  The more Porsche points on your account, the higher chance for the big win you get. 
						.cars__slider
							div.cars__bg.cars__bg--1.active
							div.cars__bg.cars__bg--2
							.cars__slider-wrap
								.cars__item
									.cars__item-wrap
										img(src="img/cars-car-1.png", alt="").cars__car
								.cars__item
									.cars__item-wrap
										img(src="img/cars-car-2.png", alt="").cars__car
						.cars__footer
							a(href="https://adcombo.com/signup/").cars__btn.btn START THE RACE

			section.prizes#prizes
				.container
					.prizes__inner
						.prizes__content
							h2.prizes__title ADDITIONAL #[br]PRIZES
							p.prizes__text #[span Each contest participant of TOP-50] affiliates #[br] can win 1 additional prize and 1 grand prize! 
							.prizes__list
								button.prizes__list-item.prizes__list-item--1.active 
									span.prizes__list-item-logo
									| Rolex Submariner
								button.prizes__list-item.prizes__list-item--2 
									span.prizes__list-item-logo
								button.prizes__list-item.disabled To be announced
						.prizes__slider
							button.prizes__prev
							button.prizes__next
							.prizes__slider-wrap
								.prizes__slider_item
									.prizes__slider_item-wrap
										img(src="img/prize-2.jpg", alt="").prizes__item
										img(src="img/prize-2-logo.png", alt="").prizes__logo
								.prizes__slider_item
									.prizes__slider_item-wrap
										img(src="img/prize-1.jpg", alt="").prizes__item
										img(src="img/prize-1-logo.png", alt="").prizes__logo

